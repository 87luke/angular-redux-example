{
  "rulesDirectory": ["./tools/tslint-rules/", "node_modules/codelyzer"],
  "extends": ["angular-tslint-rules", "tslint-config-prettier"],
  "rules": {
    "ban-types": {
      "options": [
        ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
        [
          "Function",
          "Avoid using the `Function` type. Prefer a specific function type, like `() => void`."
        ],
        ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
        ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
        ["String", "Avoid using the `String` type. Did you mean `string`?"],
        ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
      ]
    },
    "no-any": {
      "options": true,
      "severity": "warning"
    },
    "no-import-side-effect": [
      true,
      {
        "ignore-pattern": "/zone.js//*/"
      }
    ],
    "no-magic-numbers": false,
    "no-this-assignment": true,
    "no-var-requires": true,
    "prefer-readonly": true,
    "promise-function-async": [true, "check-function-declaration", "check-method-declaration"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],

    "await-promise": true,
    "ban": [
      true,
      ["fit"],
      ["fdescribe"],
      ["xit"],
      ["xdescribe"],
      { "name": "Object.assign", "message": "Use the spread operator instead." }
    ],
    "ban-comma-operator": true,
    "curly": true,
    "label-position": true,
    "no-console": false,
    "no-floating-promises": false,
    "no-for-in-array": true,
    "no-implicit-dependencies": true,
    "no-inferred-empty-object-type": true,
    "no-null-keyword": false,
    "no-object-literal-type-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-submodule-imports": false,
    "no-unbound-method": true,
    "no-unsafe-any": false,
    "no-unused-expression": true,
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "no-void-expression": true,
    "restrict-plus-operands": true,
    "strict-boolean-expressions": false,
    "strict-type-predicates": true,
    "switch-default": false,
    "use-default-type-parameter": true,

    "cyclomatic-complexity": [true, 5],
    "linebreak-style": [true, "LF"],
    "max-classes-per-file": [true, 1],
    "max-line-length": [true, 100],
    "no-irregular-whitespace": true,
    "no-mergeable-namespace": true,
    "no-parameter-reassignment": true,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],

    "array-type": [true, "array-simple"],
    "arrow-return-shorthand": true,
    "comment-format": [true, "check-space"],
    "completed-docs": {
      "options": true,
      "severity": "warning"
    },
    "deprecation": true,
    "file-name-casing": [true, "kebab-case"],
    "interface-over-type-literal": false,
    "match-default-export-name": true,
    "newline-per-chained-call": false,
    "no-boolean-literal-compare": true,
    "no-parameter-properties": false,
    "no-reference-import": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "number-literal-format": true,
    "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
    "prefer-switch": false,
    "return-undefined": true,
    "switch-final-break": false,
    "type-literal-delimiter": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],

    "banana-in-box": true,
    "decorator-not-allowed": true,
    "i18n": [false, "check-id"],
    "use-host-property-decorator": false,
    "use-view-encapsulation": {
      "options": true,
      "severity": "warning"
    },

    "ts-loader": true,
    "no-exposed-todo": true,
    "setters-after-getters": true,
    "no-host-decorator-in-concrete": [true, "HostBinding", "HostListener"],
    "validate-decorators": [
      true,
      {
        "Component": {
          "!host": "\\[class\\]",
          "!preserveWhitespaces": ".*",
          "!styles": ".*",
          "changeDetection": "\\.OnPush$",
          "encapsulation": "\\.(ShadowDom|Emulated)"
        },
        "Directive": {
          "!host": "\\[class\\]"
        }
      },
      "+(src|e2e|projects)/**/!(*.spec).ts"
    ],
    "require-license-banner": [true, "+(src|e2e|projects)/**/!(*.spec|*.e2e-spec).ts"],
    "no-unescaped-html-tag": true
  },
  "linterOptions": {
    "exclude": ["tools/**/*", "test/**/*", "dist", "node_modules"]
  }
}
